<Window
    x:Class="BetterStart.Views.MainV"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:focus="clr-namespace:BetterStart.Helper"
    xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
    xmlns:userControls="clr-namespace:Calculator3D.Views.UserControls"
    HorizontalAlignment="Center" VerticalAlignment="Center"
    AllowsTransparency="True"
    Background="{DynamicResource MaterialDesignPaper}"
    DataContext="{Binding MainVM, Source={StaticResource Locator}}"
    FontFamily="pack://application:,,,/MaterialDesignThemes.Wpf;component/Resources/Roboto/#Roboto"
    Loaded="OnLoaded"
    ResizeMode="CanResize" SizeChanged="WindowStateChanged"
    PreviewMouseLeftButtonDown="OnMouseLeftButtonDown" Topmost="True"
    PreviewMouseLeftButtonUp="OnMouseLeftButtonUp" Deactivated="Window_Deactivated"
    PreviewMouseMove="OnMouseMove"
    Style="{StaticResource WindowStyle}"
    TextElement.FontSize="16"
    TextElement.FontWeight="Medium"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    WindowStyle="None">
    <Window.Icon>
        <Binding Converter="{StaticResource ConvertMaterialDesignIconToIcon}">
            <Binding.Source>
                <materialDesign:PackIcon
                    Width="256"
                    Height="256"
                    Foreground="WhiteSmoke"
                    Kind="TestTube" />
            </Binding.Source>
        </Binding>
    </Window.Icon>

    <Grid>
        <StackPanel>
            <TextBox  Margin="10" Text="{Binding SearchString, UpdateSourceTrigger=PropertyChanged}" focus:FocusExtension.IsFocused="{Binding IsFocused}"></TextBox>
        
        <ListView>

        </ListView>
        </StackPanel>
    </Grid>
</Window>
